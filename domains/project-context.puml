package "Project Management" {
    class Project <<AggregateRoot>> {
        - projectId: String
        - createTime: DateTime
        - updateTime: DateTime
        - projectType: ProjectType
        - verificationStatus: VerificationStatus
        - createdBy: UserId
        - assignedTeam: TeamId
        - auditRecordId: String
        - gitHubPagesUrl: String
        - visibilityStatus: VisibilityStatus
        + publish()
        + revoke()
        + requestVerification()
        + updateVisibility(status: VisibilityStatus)
        + updateVerificationStatus(status: VerificationStatus)
    }

    enum ProjectType {
        FREELANCE
        INTERNAL
        OUTSOURCE
        STARTUP
    }

    enum VerificationStatus {
        PENDING
        APPROVED
        REJECTED
    }

    enum VisibilityStatus {
        PUBLIC
        PRIVATE
    }

    ' ----- Domain Events -----
    class QualificationReviewed <<DomainEvent>> {
        + qualificationId: String
        + projectId: String
        + reviewRecordId: String
        + result: ReviewResult
    }

    ' ----- Core Relationships -----
    Project "1" --> "1" User : created by >
}